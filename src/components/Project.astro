---
import NextJs from "../icons/NextJs.astro";
import Tailwind from "../icons/Tailwind.astro";

const TAGS = {
    NEXT: {
        name: "Next.js",
        color: "bg-black text-white",
        icon: NextJs,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        color: "bg-[#003159] text-white",
        icon: Tailwind,
    },
};

const PROJECTS = [
    {
        title: "a",
        description:
            "AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA",
        link: "#",
        github: "#",
        image: "/projects/a.webp",
        tags: [TAGS.NEXT, TAGS.TAILWIND, "JavaScript"],
    },
];
---

{
    PROJECTS.map(({ title, description, tags, image }) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map((tag) => (
                    <li>
                        {typeof tag === "string" ? (
                            <span class="flex gap-x-2 rounded-full text-xs py-1 px-2">
                                {tag}
                            </span>
                        ) : (
                            <span class={`flex gap-x-2 rounded-full text-xs ${tag.color} py-1 px-2`}>
                                <tag.icon class="size-4" />
                                {tag.name}
                            </span>
                        )}
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/10"
                src={image}
                alt={`${image}'s project screenshot`}
            />
        </article>
    ))
}
